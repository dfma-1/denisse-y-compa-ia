#include <stdio.h>

int main() {
    int numeroSecreto = 25;
    int intento;

    printf("Adivina el número secreto: ");
    scanf("%d", &intento);

    if (intento > numeroSecreto) {
        printf("El número es muy alto.\n");
    } else if (intento < numeroSecreto) {
        printf("El número es muy bajo.\n");
    } else {
        printf("¡Felicidades! Has adivinado el número.\n");
    }

    return 0;
}
